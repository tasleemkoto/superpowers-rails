<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-black">
    <h1>Buy or rent your next gen superpower</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>

<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">Superpowers on sale</h3>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#superpowerModal">
      Rent out/sell Superpower
    </button>
    <div class="modal fade" id="superpowerModal" tabindex="-1" aria-labelledby="superpowerModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="superpowerModalLabel">Add a New Superpower</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <%= form_with model: Superpower.new, url: superpowers_path, local: true do |form| %>
              <div class="form-group">
                <%= form.label :title, "Superpower" %>
                <%= form.text_field :title, class: "form-control" %>
              </div>
              <div class="form-group mt-3">
                <%= form.label :description, "Description" %>
                <%= form.text_area :description, class: "form-control" %>
              </div>
              <div class="form-group mt-3">
                <%= form.label :price, "Price" %>
                <%= form.text_area :price, class: "form-control" %>
              </div>
              <div class="form-group mt-3">
                <%= form.label :price, "Category" %>
                <%= form.text_area :category, class: "form-control" %>
              </div>
          </div>
          <div class="modal-footer">
            <%= form.submit "Create Superpower", class: "btn btn-primary" %>
            <% end %>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
</div>
  </div>
  <div class="row">
    <% @superpowers.each do |superpower| %>
      <div class="co-12 col-sm-6 col-md-4 mb-3">
        <%= link_to superpower_path(superpower), class:"text-decoration-none" do %>
          <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
            <%= superpower.title %>
            <div class="card-product">
                <img src="#" alt="superpower_img" />
                <div class="card-product-infos">
                    <h2>Superpower name</h2>
                    <p>Product description with <strong>relevant info</strong> only.</p>
                </div>
            </div>
          </div>
          <% end %>
      </div>
    <% end %>
  </div>
</div>