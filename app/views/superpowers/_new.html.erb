  <div class="modal fade" id="superpowerModal" tabindex="-1" aria-labelledby="superpowerModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="superpowerModalLabel">Add a New Superpower</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <%= form_with model: Superpower.new, url: new_superpower_path, local: true do |form| %>
              <div class="form-group">
                <%= form.label :name, "Superpower" %>
                <%= form.text_field :name, class: "form-control" %>
              </div>
              <div class="form-group mt-3">
                <%= form.label :description, "Description" %>
                <%= form.text_area :description, class: "form-control" %>
              </div>
              <div class="form-group mt-3">
                <%= form.label :price, "Price" %>
                <%= form.text_area :price, class: "form-control" %>
              </div>
              <div class="form-group mt-3">
                <%= form.label :price, "Category" %>
                <%= form.text_area :category, class: "form-control" %>
              </div>
          </div>
          <div class="modal-footer">
            <%= form.submit "Create Superpower", class: "btn btn-primary" %>
            <% end %>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
</div>