<h1>Edit Superpower</h1>

<%= form_with model: @superpower, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :category %>
    <%= form.text_field :category, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :Renting price %>
    <%= form.number_field :price, class: "form-control" %>
  </div>

 <div class="mb-3">
    <%= form.label :Selling price %>
    <%= form.number_field :price, class: "form-control" %>
  </div>
  <%= form.submit "Update Superpower", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back", superpower_path(@superpower), class: "btn btn-secondary mt-3" %>
