<h2>My account</h2>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">


<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="profile-card">
        <div class=" profile-card-header bg-primary text-white">
          <h3 class="profile-card-title bg-white text-black">User Profile</h3>
        </div>
          <div class="profile-card-body">
            <div class="col-md-6">
              <h5><strong>Name:</strong> <%= current_user.username %></h5>
              <h5><strong>Email:</strong> <%= current_user.email %></h5>
              <h5><strong>Tokens:</strong> <%= current_user.credits %> </h5>
            </div>
          </div>
    </div>
  <%= link_to 'Edit profile info', edit_user_registration_path , class: "btn", style: "background-color: #ffb400; color: #333333;"  %>
  </div>
</div>
