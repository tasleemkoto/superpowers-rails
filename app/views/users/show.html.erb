<h1 class="text-center" style="font-size: 175%;">My account</h1>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">


<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 profile-card ">
      <div class="card" style="border: none;">
        <div class="card-header text-white" style="border: none;">
          <h4 class=" " style="color: #333333;">User Profile</h4>
        </div>
        <div class="card-body">
          <div class="col-md">
            <h5><strong>Name:</strong> <%= current_user.username %></h5>
            <h5><strong>Email:</strong> <%= current_user.email %></h5>
            <h5><strong>Tokens:</strong> <%= current_user.credits %> </h5>
          </div>
        </div>
        <div class="card-footer text-center" style="border: none;">
           <%= link_to 'Edit profile info', edit_user_registration_path , class: "btn", style: "background-color: #ffb400; color: #333333;"  %>
        </div>
      </div>
    </div>
   </div>
</div>
