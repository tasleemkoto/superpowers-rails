<h1 class="text-center" style="font-size: 175%; color: #333333;">My Bookings</h1>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<% if @bookings.any? %>
 <div class="container">
    <div class="row">
      <% @bookings.each do |booking| %>
        <% if booking.user_id == current_user.id %>
          <div class="col-md-4 mb-4">
            <p><strong>Start Date:</strong> <%= booking.start_date.strftime("%B %d, %Y") %><br></p>
            <p><strong>End Date:</strong> <%= booking.end_date.strftime("%B %d, %Y") %><br></p>
            <p><strong>Status:</strong> <%= booking.status %></p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% else %>
  <p class="text-center">You have no bookings.</p>
<% end %>

<h1 class="text-center" style="font-size: 175%; color: #333333;">My Booking requests</h1>
<% if @my_booking_requests.any? %>
  <div class="container">
    <div class="row">
      <% @my_booking_requests.each do |booking| %>
          <div class="col-md-4 mb-4">
            <strong>Start Date:</strong> <%= booking.start_date.strftime("%B %d, %Y") %><br>
            <strong>End Date:</strong> <%= booking.end_date.strftime("%B %d, %Y") %><br>
            <%= simple_form_for booking do |f| %>
              <%= f.input :status, collection: ["accepted", "rejected"] %>
              <%= f.submit "Update status" %>
            <% end %>
          </div>
      <% end %>
  </div>
  </div>
<% else %>
  <p class="text-center">You have no bookings.</p>
<% end %>
